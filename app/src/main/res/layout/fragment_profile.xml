                    </android.support.design.widget.TextInputLayout>-->


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tilAddress"
                        android:layout_below="@+id/tilLName"
                        android:textColorHint="@color/colorAccent">

                        <EditText
                            android:id="@+id/eEditProfileAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="@string/hint_address"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textCursorDrawable="@null"
                            android:textSize="17sp"
                            android:inputType="textCapSentences|textMultiLine"
                            android:minLines="1"
                            android:maxLines="50"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tilAddress"
                        android:id="@+id/tilPincode"
                        android:textColorHint="@color/colorAccent">

                        <EditText
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:id="@+id/eEditProfilePincode"
                            android:hint="@string/hint_pincode"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textCursorDrawable="@null"
                            />
                    </android.support.design.widget.TextInputLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tilPincode">

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9876543210"
                            android:fontFamily="sans-serif"
                            android:textSize="17sp"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/tEditProfileMobileNumber"/>-->

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tilMobileNumber"
                            android:layout_centerVertical="true"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/eEditProfileMobileNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_mobile_number"
                                android:textColor="@color/black"
                                android:singleLine="true"
                                android:maxLength="10"
                                android:ems="10"
                                android:textCursorDrawable="@null"
                                android:textSize="17sp"
                                android:inputType="number" />

                        </android.support.design.widget.TextInputLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/check"
                            android:layout_margin="5dp"
                            android:tint="@color/colorAccent"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:id="@+id/ivMobileNumberDone"/>

                    </RelativeLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

