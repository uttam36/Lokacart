    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_margin="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frameLayout">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_view1"
                    android:elevation="5dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/edit"
                            android:id="@+id/ivEdit"
                            android:tint="@color/profile_tick"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:textSize="35sp"
                            android:ellipsize="end"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="30dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:id="@+id/tProfileName"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="abc@def.com"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:textSize="20sp"
                            android:ellipsize="end"
                            android:layout_below="@+id/tProfileName"
                            android:id="@+id/tProfileEmail"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="9876543210"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/tProfileEmail"
                            android:id="@+id/tProfileMobileNumber"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:minLines="1"
                            android:maxLines="2"
                            android:layout_below="@+id/tProfileMobileNumber"
                            android:id="@+id/tProfileAddress"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pincode"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/tProfileAddress"
                            android:id="@+id/tProfilePincode"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/profile_placeholder"
                    android:elevation="10dp"
                    android:background="@null"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tProdilePhoto"/>


            </FrameLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frameLayout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="5dp"
                android:id="@+id/card_view2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/profile_placeholder"
                        android:background="@null"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/tEditProdilePhoto"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/tick"
                        android:tint="@color/profile_tick"
                        android:layout_marginTop="17dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/ivDone"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tilFName"
                        android:layout_below="@+id/tEditProdilePhoto"
                        android:textColorHint="@color/colorAccent">

                        <EditText
                            android:id="@+id/eEditProfileFName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="@string/hint_first_name"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textCursorDrawable="@null"
                            android:textSize="17sp"
                            android:inputType="text" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tilLName"
                        android:layout_below="@+id/tilFName"
                        android:textColorHint="@color/colorAccent">

                        <EditText
                            android:id="@+id/eEditProfileLName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="@string/hint_last_name"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textCursorDrawable="@null"
                            android:textSize="17sp"
                            android:inputType="text" />

                    </android.support.design.widget.TextInputLayout>

                    <!--<android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tilEmail"
                        android:layout_below="@+id/tilLName"
                        android:textColorHint="@color/colorAccent">

                        <EditText
                            android:id="@+id/eEditProfileEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="@string/hint_email_id"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textCursorDrawable="@null"
                            android:textSize="17sp"
                            android:inputType="textEmailAddress" />

                    </android.support.design.widget.TextInputLayout>-->

                    <!--<android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
