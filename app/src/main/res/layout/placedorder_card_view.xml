<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:contentPadding="2dp"
   >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
               android:id="@+id/relativeLayout"
              android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp">

    <TextView android:id="@+id/tvOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OrderId"
        android:textSize="@dimen/standard_text_size"
        android:textColor="#7c7d7a"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"/>

    <TextView android:id="@+id/tvDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="12 xyz 16"
             android:textColor="#7c7d7a"
              android:layout_centerInParent="true"
              android:layout_alignBaseline="@id/tvOrderId"
              android:textSize="@dimen/standard_text_size"
             />

    <TextView android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000.00"
        android:textColor="#7c7d7a"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/standard_text_size"
        android:fontFamily="sans-serif-medium" />

    <ImageView android:id="@+id/arrow_expand_imageview"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                 android:layout_centerInParent="true"
            android:layout_marginTop="24dp"
               android:src="@drawable/selector_arrow_down"/>

</RelativeLayout>
    </android.support.v7.widget.CardView>